---
import MainLayout from '@/layouts/main.layout.astro';
import Icon from 'astro-icon';
import { getCollection } from 'astro:content';
const notes = await getCollection('notes');
const handwritings = await getCollection('handwritings');
const tags = [...notes, ...handwritings].reduce(
  (acc, cur) => {
    cur.data.tags.forEach((tag) => {
      if (tag in acc) {
        acc[tag] += 1;
      } else {
        acc[tag] = 1;
      }
    });
    return acc;
  },
  {} as Record<string, number>
);
const pageTitle = 'Tags';
---

<MainLayout pageTitle={pageTitle}>
  <div class="w-full p-4">
    <ul class="grid grid-cols-5 gap-4">
      {
        Object.entries(tags).map(([key, value]) => (
          <a href={`/tags/${key}`}>
            <li class="flex justify-center items-center gap-4 rounded p-2 bg-slate-400 shadow hover:bg-slate-500 border-b-2 border-b-slate-800 active:border-b-0 active:border-t-2 active:border-t-slate-800 text-white cursor-pointer">
              <Icon name="tabler:tag" size="18" />
              <span class="font-semibold flex-1 text-ellipsis overflow-hidden whitespace-nowrap text-center">{key}</span>
              <span>{value}</span>
            </li>
          </a>
        ))
      }
    </ul>
  </div>
</MainLayout>
