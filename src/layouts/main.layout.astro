---
import BackToTop from '@/components/BackToTop';
import Footer from '@/components/Footer.astro';
import Header from '@/components/Header.astro';
import '@/styles/global.css';
import '@fontsource/monaspace-neon';
import { ClientRouter } from 'astro:transitions';
interface Props {
  pageTitle?: string;
}
const { pageTitle = "Alonia's Blog" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Alonia's blog" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>{pageTitle}</title>
    <ClientRouter fallback="animate" />
  </head>
  <body class="relative min-h-[100vh] flex flex-col max-w-4xl mx-auto">
    <Header />
    <main class="relative flex-1" transition:animate="fade">
      <slot />
    </main>
    <Footer />
    <BackToTop client:only="react" />
  </body>
</html>
